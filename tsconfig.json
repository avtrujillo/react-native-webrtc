{
    "compilerOptions": {
      "declaration": true,
      "target": "esnext",
      "module": "esnext",
      "lib": [
        "es6",
        "DOM"
      ],
      "allowJs": true,
      "incremental": true,
    //   "isolatedModules": true,
      "strict": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "noFallthroughCasesInSwitch": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": false,
      "outDir": "."
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "src/metro.config.ts",
      "jest.config.js"
    ],
    "include": [
      "src"
    ]
  }
  